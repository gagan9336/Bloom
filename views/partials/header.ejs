<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bloom</title>
    <link
      rel="shortcut icon"
      href="/stylesheets/BL-logo2.jpg"
      type="image/pngx-icon"
    />

    <!-- font stylesheet -->
    <link href="/your-path-to-fontawesome/css/fontawesome.css" />
    <link href="/your-path-to-fontawesome/css/brands.css" />
    <link href="/your-path-to-fontawesome/css/solid.css" />
    <script
      src="https://kit.fontawesome.com/1a5f7041d2.js"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Tangerine:wght@700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Akronim&family=Elsie+Swash+Caps&family=Fredericka+the+Great&family=Grey+Qo&family=Limelight&family=Ruthie&family=Rye&display=swap"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Luxurious+Script&display=swap"
      rel="stylesheet"
    />
    <!-- bootstrap stylesheet -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    />

    <!-- Google Maps API -->
    <script src="https://api.mapbox.com/mapbox-gl-js/v2.3.1/mapbox-gl.js"></script>
    <link
      href="https://api.mapbox.com/mapbox-gl-js/v2.3.1/mapbox-gl.css"
      rel="stylesheet"
    />

    <!-- custom css stylesheet -->
    <link rel="stylesheet" href="stylesheets/css/loading-animation.css" />
    <link rel="stylesheet" href="stylesheets/css/logo-animation.css" />
    <link rel="stylesheet" href="stylesheets/css/map.css" />
  </head>

  <body>
    <!-- Nav Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
      <div class="container">
        <!-- For page loading animation -->
        <div class="loader-wrapper">
          <span class="loader"><span class="loader-inner"></span></span>
        </div>

        <a class="navbar-brand neonText animated flip" href="/campGround">
          <span
            style="font-family: 'Elsie Swash Caps', cursive; font-weight: 600"
            >BLOOM</span
          >
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <a
                class="nav-link"
                href="#"
                style="font-size: 20px; line-height: 30px"
                data-toggle="modal"
                data-target="#exampleModal"
                ><strong>Categories</strong
                ><span class="sr-only">(current)</span></a
              >
            </li>
          </ul>
          <form
            class="form-inline my-2 my-lg-0"
            action="/campGround"
            method="GET"
            onsubmit="disableButton()"
          >
            <input
              class="form-control mr-sm-2"
              type="text"
              name="search"
              placeholder="Search posts..."
              aria-label="Search"
              style="width: 80%; margin-right: 15px"
            />
            <button
              class="btn btn-outline-secondary my-2 my-sm-0"
              type="submit"
            >
              <i class="fas fa-search"></i>
            </button>
          </form>
          <ul class="navbar-nav ml-auto">
            <% if(!currentUser){ %>
            <li class="nav-item">
              <a class="nav-link" href="/login"
                ><strong>Login</strong><span class="sr-only">(current)</span></a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register"><strong>Register</strong></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/feedback"
                ><strong>Feedback</strong
                ><span class="sr-only">(current)</span></a
              >
            </li>
            <% }else{ %>
            <li class="nav-item">
              <a class="nav-link" href="/campGround/new"
                ><i class="fas fa-plus-square"></i> <strong>New Post</strong></a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">
                <i class="fa fa-user-circle" aria-hidden="true"></i>
                <strong><%= currentUser.username%></strong>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout"><strong>Logout</strong></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/feedback"
                ><strong>Feedback</strong
                ><span class="sr-only">(current)</span></a
              >
            </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Flash Messages -->
    <div class="container" style="margin-top: 10px">
      <% if(error && error.length> 0){ %>
      <div class="alert alert-danger" role="alert"><%=error%></div>
      <% } %> <% if(success && success.length> 0){ %>
      <div class="alert alert-success" role="alert"><%=success%></div>
      <% } %>
    </div>

    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header text-center">
            <h5
              class="modal-title"
              id="exampleModalLabel"
              style="font-size: 20px; line-height: 30px"
            >
              <strong>Categories</strong>
            </h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form
              class="styled-form"
              action="/campGround"
              method="GET"
              onsubmit="disableButton()"
            >
              <div class="form-group mb-3">
                <input
                  class="btn btn-primary my-1 form-control"
                  type="submit"
                  name="category"
                  value="Entertainment"
                />
              </div>
            </form>
            <form
              class="styled-form"
              action="/campGround"
              method="GET"
              onsubmit="disableButton()"
            >
              <div class="form-group mb-3">
                <input
                  class="btn btn-secondary my-1 form-control"
                  type="submit"
                  name="category"
                  value="Sports"
                />
              </div>
            </form>
            <form
              class="styled-form"
              action="/campGround"
              method="GET"
              onsubmit="disableButton()"
            >
              <div class="form-group mb-3">
                <input
                  class="btn btn-danger my-1 form-control"
                  type="submit"
                  name="category"
                  value="Technology"
                />
              </div>
            </form>
            <form
              class="styled-form"
              action="/campGround"
              method="GET"
              onsubmit="disableButton()"
            >
              <div class="form-group mb-3">
                <input
                  class="btn btn-warning form-control"
                  type="submit"
                  name="category"
                  value="Memories"
                />
              </div>
            </form>
            <form
              class="styled-form"
              action="/campGround"
              method="GET"
              onsubmit="disableButton()"
            >
              <div class="form-group mb-3">
                <input
                  class="btn btn-info form-control"
                  type="submit"
                  name="category"
                  value="Food"
                />
              </div>
            </form>
            <form
              class="styled-form"
              action="/campGround"
              method="GET"
              onsubmit="disableButton()"
            >
              <div class="form-group mb-3">
                <input
                  class="btn btn-light form-control"
                  type="submit"
                  name="category"
                  value="News"
                />
              </div>
            </form>
            <form
              class="styled-form"
              action="/campGround"
              method="GET"
              onsubmit="disableButton()"
            >
              <div class="form-group mb-3">
                <input
                  class="btn btn-success form-control"
                  type="submit"
                  name="category"
                  value="Travel"
                />
              </div>
            </form>
            <form
              class="styled-form"
              action="/campGround"
              method="GET"
              onsubmit="disableButton()"
            >
              <div class="form-group mb-3">
                <input
                  class="btn btn-dark form-control"
                  type="submit"
                  name="category"
                  value="Science"
                />
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
